<%- model_class = Thing -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<%= will_paginate @things, :renderer => BootstrapPagination::Rails %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @things.each do |thing| %>
      <tr>
        <td><%= link_to thing.id, thing_path(thing) %></td>
        <td><%= thing.name %></td>
        <td><%= thing.description %></td>
        <td><%=l thing.created_at %></td>
        <td>
          <%= link_to edit_thing_path(thing),
                      :class => 'btn btn-mini' do %>
            <i class="icon-edit"></i>
            <%= t('.edit', :default => t("helpers.links.edit")) %>
          <% end %>
          <%= link_to thing_path(thing),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' do %>
            <i class="icon-trash"></i>
            <%= t('.destroy', :default => t("helpers.links.destroy")) %>
          <% end %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @things, :renderer => BootstrapPagination::Rails %>

<%= link_to new_thing_path,
            :class => 'btn btn-primary' do %>
  <i class="icon-plus"></i>
  <%= t('.new', :default => t("helpers.links.new")) %>
<% end %>
