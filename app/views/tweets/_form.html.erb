
<%= bootstrap_form_for(@tweet, style: :horizontal, left: "col-sm-2", right: "col-sm-10") do |f| %>
  <%= f.alert_message "Please fix the errors below." %>

  <%= f.text_field :tweet_type %>
  <%= f.number_field :lat, step: "any" %>
  <%= f.number_field :lng, step: "any" %>
  <%= f.text_field :uri %>
    <%= f.text_area :full_text %>
    <%= f.text_field :user_name %>
    <%= f.text_field :user_image_uri %>
    <%= f.text_field :image_uri %>

    <%= button_tag type: 'submit', class:  'btn btn-primary' do %>
      <i class='fa fa-save'></i> <%= f.object.new_record? ? 'Create' : 'Update' %>
    <% end %>
    <%= button_tag type: 'reset', class: "btn btn-danger" do %>
      <i class="fa fa-trash-o"></i> Cancel
    <% end %>
<% end %>
